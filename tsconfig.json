{
    "compilerOptions": {
        "strict": true,
        "noImplicitReturns": true,
        "allowJs": false,
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "target": "es5",
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "es6", "esnext.asynciterable"],
        "plugins": [
            { "name": "tslint-language-service" }
        ]
    },
    "exclude": ["node_modules"]
}